{
    "version": 2,
    "builds": [
      {
        "src": "server/api.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api",
        "dest": "server/api.js"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ],
    "env": {
      "BLOGGER_API_KEY": "@blogger_api_key",
      "BLOGGER_BLOG_ID": "@blogger_blog_id"
    }
  }
  